<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape>
            <size android:height="@dimen/car_seekbar_background_height" />
            <solid android:color="@color/car_seekbar_background_color" />
            <corners android:radius="@dimen/car_seekbar_background_corner_radius" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress"
        android:gravity="center_vertical">
        <clip>
            <shape>
                <size android:height="@dimen/car_seekbar_height" />
                <corners android:radius="@dimen/car_seekbar_rounded_corner_radius" />
                <solid
                    android:color="@color/car_seekbar_secondary_color" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress"
        android:gravity="center_vertical">
        <clip>
            <shape>
                <size android:height="@dimen/car_seekbar_height" />
                <corners android:radius="@dimen/car_seekbar_rounded_corner_radius" />
                <solid android:color="@color/car_seekbar_primary_color" />
            </shape>
        </clip>
    </item>
</layer-list>
