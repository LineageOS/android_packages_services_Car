<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/nav_bar_button_selected"
        android:state_selected="true">
        <ripple android:color="@color/car_ui_ripple_color">
            <item android:drawable="@drawable/nav_bar_button_background_selected" />
        </ripple>
    </item>

    <item
        android:id="@+id/nav_bar_button_unselected">
        <ripple android:color="@color/car_ui_ripple_color">
            <item android:drawable="@drawable/nav_bar_button_background_unselected" />
        </ripple>
    </item>

    <transition
        android:drawable="@drawable/nav_bar_button_background_unselected_to_selected_anim"
        android:fromId="@id/nav_bar_button_unselected"
        android:toId="@id/nav_bar_button_selected" />

    <transition
        android:drawable="@drawable/nav_bar_button_background_selected_to_unselected_anim"
        android:fromId="@id/nav_bar_button_selected"
        android:toId="@id/nav_bar_button_unselected" />
</animated-selector>