package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_library {
    name: "CarUiPortraitLauncher-core",

    // Only compile source java files in this apk.
    srcs: ["src/**/*.java"],
    // Needs the platform api because CarLauncher-core also uses platform_apis.
    platform_apis: true,
    static_libs: [
        "androidx-constraintlayout_constraintlayout-solver",
        "androidx-constraintlayout_constraintlayout",
        "androidx.lifecycle_lifecycle-extensions",
        "androidx.car.app_app",
        "car-ui-lib",
        "CarLauncher-core",
        "WindowManager-Shell",
        "car-portrait-ui-common",
        "car-media-common"
    ],

    libs: ["android.car"],
}

android_app {
    name: "CarUiPortraitLauncher",

    overrides: [
        "Launcher2",
        "Launcher3",
        "Launcher3QuickStep",
        "CarLauncher",
    ],

    platform_apis: true,
    certificate: "platform",
    static_libs: ["CarUiPortraitLauncher-core"],

    libs: ["android.car"],

    optimize: {
        enabled: false,
    },

    dex_preopt: {
        enabled: false,
    },
}
