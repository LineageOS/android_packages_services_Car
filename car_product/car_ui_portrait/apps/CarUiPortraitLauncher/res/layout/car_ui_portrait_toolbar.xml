<com.android.car.portraitlauncher.panel.ToolBarView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@*android:dimen/status_bar_height"
    android:background="@color/car_shadow"
    android:visibility="gone">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/immersive_back"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/toolbar_back_button_start_margin"/>

    <TextClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="@style/TextAppearance.Car.Subhead.Large"
        android:textColor="@color/car_neutral_variant_100"/>

</com.android.car.portraitlauncher.panel.ToolBarView>