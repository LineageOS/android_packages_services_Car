package {
    default_team: "trendy_team_aaos_framework",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

python_binary_host {
    name: "perf_stats_parser",
    main: "parser/perf_stats_parser.py",
    srcs: [
        "parser/carwatchdog_dump_parser.py",
        "parser/perf_stats_parser.py",
        "parser/perf_stats_proto_utils.py",
    ],
    libs: [
        "perf_stats_proto",
    ],
    version: {
        py3: {
            embedded_launcher: true,
        },
    },
}

python_library_host {
    name: "perf_stats_proto",
    srcs: ["parser/*.proto"],
    proto: {
        canonical_path_from_root: false,
    },
}

cc_binary {
    name: "watchdog_cycles",
    srcs: ["cpufreq/watchdog_cycles_task.cpp"],
    header_libs: ["libeigen"],
    cppflags: [
        "-O2",
        "-Wall",
        "-Werror",
        "-Wno-missing-field-initializers",
        "-Wno-sign-compare",
    ],
}
