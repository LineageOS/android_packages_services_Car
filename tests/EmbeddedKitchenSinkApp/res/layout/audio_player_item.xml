<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/player_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start" />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/player_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:gravity="start" />
        <Space
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:gravity="start" />
        <Button
            android:id="@+id/player_play_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_pcm_once"
            android:gravity="start" />
        <Space
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:gravity="start" />
        <Button
            android:id="@+id/player_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:gravity="start" />
        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:gravity="start" />
        <TextView
            android:id="@+id/player_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_not_started"
            android:gravity="start" />
        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:gravity="start" />
        <TextView
            android:id="@+id/player_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/audio_device_selected(@string/long_device_name)}"
            android:gravity="start" />
    </LinearLayout>
</ScrollView>
