package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_library {
    name: "android.car-no-dep",
    defaults: [
        "android.car-defaults",
    ],
    aidl: {
        include_dirs: [
            "packages/services/Car/car-lib/src",
            "packages/modules/Bluetooth/framework/aidl-export",
        ],
    },
    static_libs: [
        "fake.com.android.car.internal.dep",
    ],
    sdk_version: "module_current",
}

java_defaults {
    name: "CarLibUnitTestDefault",
    static_libs: [
        "android.car-no-dep",
        "android.car.test.utils",
        "androidx.annotation_annotation",
        "androidx.test.rules",
        "truth",
        "vehicle-hal-support-lib",
    ],
    srcs: [
        "src/**/*.java",
    ],
    libs: [
        "android.test.base",
        "framework-annotations-lib",
    ],
}

android_ravenwood_test {
    name: "CarLibHostUnitTest",
    static_libs: [
        "android.car.builtin.testonly",
    ],
    defaults: [
        "CarLibUnitTestDefault",
    ],
    auto_gen_config: true,
}

android_test {
    name: "CarLibDeviceUnitTest",
    static_libs: [
        "mockito-target-extended",
        "ravenwood-junit",
    ],
    defaults: [
        "CarLibUnitTestDefault",
    ],
    test_suites: [
        "general-tests",
        "automotive-tests",
        "automotive-general-tests",
    ],
    // mockito-target-inline dependency
    jni_libs: [
        "libdexmakerjvmtiagent",
        "libstaticjvmtiagent",
    ],
    platform_apis: true,
}
